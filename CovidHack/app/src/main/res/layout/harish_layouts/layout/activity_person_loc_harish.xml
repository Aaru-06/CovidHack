<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.harish_activities.PersonLocAct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/infectedLabel"
                android:text="Are you infected by covid? "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/infectedBox"

                android:layout_toRightOf="@+id/infectedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/pushLabel"
                android:text="Do you want to share your location history to public"
                android:layout_below="@+id/infectedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/pushBox"
                android:layout_below="@+id/infectedLabel"
                android:layout_toRightOf="@+id/pushLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/share"
                android:layout_below="@+id/pushLabel"
                android:layout_centerInParent="true"
                android:text="Publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>